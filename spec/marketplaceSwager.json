{
    "swagger": "2.0",
    "info": {
        "title": "Marketplace API",
        "description": "API para integração entre ERP e Marketplace, utilizando eventos para sincronização de dados.",
        "version": "1.0.0"
    },
    "host": "api.marketplace.com",
    "basePath": "/v1",
    "paths": {
        "/products": {
            "post": {
                "summary": "Publicar produto",
                "description": "Publica um produto no marketplace.",
                "operationId": "addProduct",
                "consumes": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "requestBody",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Product"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Produto publicado com sucesso"
                    },
                    "400": {
                        "description": "Requisição inválida"
                    }
                }
            }
        },
        "/payments": {
            "post": {
                "summary": "Processar pagamento",
                "description": "Processa um pagamento no Marketplace.",
                "operationId": "addPayment",
                "consumes": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "requestBody",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Payment"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Pagamento processado com sucesso"
                    },
                    "400": {
                        "description": "Requisição inválida"
                    }
                }
            }
        },
        "/shipments": {
            "post": {
                "summary": "Atualizar envio",
                "description": "Atualiza o status do envio de um pedido no Marketplace.",
                "operationId": "addShipment",
                "consumes": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "requestBody",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Shipment"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Envio atualizado com sucesso"
                    },
                    "400": {
                        "description": "Requisição inválida"
                    }
                }
            }
        }
    },
    "definitions": {
        "Product": {
            "type": "object",
            "properties": {
                "product_id": {
                    "type": "string"
                },
                "marketplace_id": {
                    "type": "string"
                },
                "status": {
                    "type": "string",
                    "enum": [
                        "published",
                        "pending",
                        "rejected"
                    ]
                },
                "price": {
                    "type": "number",
                    "format": "float"
                },
                "available_stock": {
                    "type": "integer"
                }
            }
        },
        "Order": {
            "type": "object",
            "properties": {
                "order_id": {
                    "type": "string"
                },
                "marketplace_order_id": {
                    "type": "string"
                },
                "status": {
                    "type": "string",
                    "enum": [
                        "processed",
                        "canceled"
                    ]
                },
                "shipping_date": {
                    "type": "string",
                    "format": "date-time"
                }
            }
        },
        "Customer": {
            "type": "object",
            "properties": {
                "marketplace_customer_id": {
                    "type": "string"
                },
                "customer_id": {
                    "type": "string"
                },
                "email": {
                    "type": "string",
                    "format": "email"
                },
                "status": {
                    "type": "string",
                    "enum": [
                        "registered",
                        "pending"
                    ]
                }
            }
        },
        "Payment": {
            "type": "object",
            "properties": {
                "payment_id": {
                    "type": "string"
                },
                "marketplace_payment_id": {
                    "type": "string"
                },
                "status": {
                    "type": "string",
                    "enum": [
                        "completed",
                        "failed"
                    ]
                },
                "processing_date": {
                    "type": "string",
                    "format": "date-time"
                }
            }
        },
        "Shipment": {
            "type": "object",
            "properties": {
                "shipment_id": {
                    "type": "string"
                },
                "marketplace_shipment_id": {
                    "type": "string"
                },
                "status": {
                    "type": "string",
                    "enum": [
                        "shipped",
                        "in_transit",
                        "delivered",
                        "delayed"
                    ]
                },
                "estimated_delivery": {
                    "type": "string",
                    "format": "date-time"
                }
            }
        }
    }
}